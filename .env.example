# Database (set your own connection URL; keep secrets out of version control)
DATABASE_URL=
NEON_DATABASE_URL=

# Dev controls
# Set to 1 to skip DB initialization during development
SKIP_DB_INIT=1
LOG_LEVEL=info

# Server bind
HOST=0.0.0.0
PORT=3000

# File watching (Replit/containers often need polling)
CHOKIDAR_USEPOLLING=1
CHOKIDAR_INTERVAL=500
WATCHPACK_POLLING=true
WATCHPACK_POLLING_INTERVAL=500