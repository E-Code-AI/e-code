# E-Code Platform Production Environment Variables
# Copy this file to .env.production and fill in all values

# Core Configuration
NODE_ENV=production
PORT=5000
APP_URL=https://e-code.com

# Database
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
PGHOST=your-database-host
PGPORT=5432
PGUSER=your-database-user
PGPASSWORD=your-database-password
PGDATABASE=your-database-name

# Authentication & Security
SESSION_SECRET=your-very-long-random-session-secret-change-this
JWT_SECRET=your-very-long-random-jwt-secret-change-this
ENCRYPTION_KEY=your-32-character-encryption-key-change-this

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# AI API Keys (Admin Provided)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GEMINI_API_KEY=your-gemini-api-key
XAI_API_KEY=your-xai-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key

# Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@e-code.com

# Payment Processing
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Storage
S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2

# Redis Cache
REDIS_URL=redis://user:password@host:6379

# CDN
CDN_URL=https://cdn.e-code.app

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEWRELIC_LICENSE_KEY=your-newrelic-key

# Security
# ALLOWED_ORIGINS: Comma-separated list of allowed origins for CORS
# For Replit deployment, include all three URLs: dev, published, and custom domain
# Example for E-Code deployment:
# ALLOWED_ORIGINS=https://f4d2485e-81a7-4595-9868-17903ab251f3-00-ngx9sxwfcs19.riker.replit.dev,https://replit-clone-henri45.replit.app,https://e-code.ai
ALLOWED_ORIGINS=https://e-code.com,https://www.e-code.com,https://app.e-code.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
ENABLE_COLLABORATION=true
ENABLE_AI=true
ENABLE_DEPLOYMENTS=true
ENABLE_BILLING=true
ENABLE_ANALYTICS=true

# Optional AI UX features (disabled by default)
FEATURE_AI_UX_IMPROVE_PROMPT=false
FEATURE_AI_UX_EXTENDED_THINKING=false
FEATURE_AI_UX_HIGH_POWER_MODE=false
FEATURE_AI_UX_PROGRESS_TAB=false
FEATURE_AI_UX_PAUSE_RESUME=false

# External Services
GITHUB_APP_ID=your-github-app-id
GITHUB_APP_PRIVATE_KEY=your-github-app-private-key
DOCKER_REGISTRY_URL=registry.e-code.app
DOCKER_REGISTRY_USERNAME=your-registry-username
DOCKER_REGISTRY_PASSWORD=your-registry-password

# Deployment
DEPLOYMENT_REGION=us-west-2
MAX_CONTAINERS=100
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_LIMIT=0.5

# Logging
LOG_LEVEL=info
LOG_FORMAT=json