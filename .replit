# Replit config to run E-Code with a single click.
# Uses Nix to provision Node.js and runs a portable start script.

run = ["bash", "-lc", "./replit-start.sh"]
language = "bash"

[nix]
# Use a stable Nix channel compatible with Replit images.
channel = "stable-23_11"

[env]
# Ensure servers bind externally on Replit.
HOST = "0.0.0.0"
