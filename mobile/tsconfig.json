{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "types": ["jest", "node"],
    "baseUrl": "./",
    "paths": {
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@types": ["src/types"],
      "@navigation/*": ["src/navigation/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
