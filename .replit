run = "bash -lc 'set -e; \
if [ -f pnpm-lock.yaml ]; then PM=pnpm; pnpm install --frozen-lockfile; pnpm run dev -- --host 0.0.0.0 --port ${PORT:-3000}; \
elif [ -f yarn.lock ]; then PM=yarn; yarn install --frozen-lockfile; yarn dev --host 0.0.0.0 --port ${PORT:-3000}; \
else PM=npm; npm ci || npm install; npm run dev -- --host 0.0.0.0 --port ${PORT:-3000}; fi'"

[env]
PORT = "3000"
HOST = "0.0.0.0"
SKIP_DB_INIT = "1"
LOG_LEVEL = "warn"
CHOKIDAR_USEPOLLING = "1"
CHOKIDAR_INTERVAL = "500"
WATCHPACK_POLLING = "true"
WATCHPACK_POLLING_INTERVAL = "500"
